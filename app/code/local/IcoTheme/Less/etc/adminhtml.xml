<config>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <tless translate="title" module="tless">
                                        <title>Less</title>
                                    </tless>
                                </children>
                            </config>
                            <tless translate="title" module="tless">
                                <title>Less Files</title>
                                <sort_order>2000</sort_order>
                            </tless>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <layout>
        <updates>
            <tless>
                <file>icotheme/less.xml</file>
            </tless>
        </updates>
    </layout>
    <translate>
        <modules>
            <IcoTheme_Less>
                <files>
                    <default>IcoTheme_Less.csv</default>
                </files>
            </IcoTheme_Less>
        </modules>
    </translate>
</config>