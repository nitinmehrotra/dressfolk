/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if ($this->getCollection()->getSize()): ?>
    <div class="toolbar">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="row">
                    <div class="col-lg-9">
                        <?php if ($this->isExpanded()): ?>
                            <div class="sorter_wrap">
                                <div class="sort-by">
                                    <div class="select-new">
                                        <div class="select-inner">
                                            <span><?php echo $this->__('Sort by: ') ?></span>
                                            <?php foreach ($this->getAvailableOrders() as $_key => $_order): ?>
                                                <?php if ($this->isOrderCurrent($_key)): ?>
                                                    <div class="overwrite-sortby"><?php echo $this->__($_order) ?></div>
                                                <?php endif; ?>
                                            <?php endforeach; ?>
                                            <ul class="sort_by">
                                                <?php foreach ($this->getAvailableOrders() as $_key => $_order): ?>
                                                    <li>
                                                        <a href="<?php echo $this->getOrderUrl($_key, 'asc') ?>"><?php echo $this->__($_order) ?></a>
                                                    </li>
                                                <?php endforeach; ?>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="direction-list">
                                        <?php if ($this->getCurrentDirection() == 'desc'): ?>
                                            <a class="direction direction-up"
                                               href="<?php echo $this->getOrderUrl(null, 'asc') ?>"
                                               title="<?php echo $this->__('Set Ascending Direction') ?>"><i
                                                    class="fa fa-arrow-up"></i></a>
                                        <?php else: ?>
                                            <a class="direction direction-up"
                                               href="<?php echo $this->getOrderUrl(null, 'desc') ?>"
                                               title="<?php echo $this->__('Set Descending Direction') ?>"><i
                                                    class="fa fa-arrow-down"></i></a>
                                        <?php endif; ?>
                                    </div>
                                </div>
                            </div>
                            <div class="limiter_wrap">
                                <div class="limiter">
                                    <div class="select-new">
                                        <div class="select-inner">
                                            <?php foreach ($this->getAvailableLimit() as $_key => $_limit): ?>
                                                <?php if ($this->isLimitCurrent($_key)): ?>
                                                    <div class="overwrite-limiter"><?php echo $_limit ?> <?php echo $this->__('items/page'); ?></div>
                                                <?php endif ?>
                                            <?php endforeach; ?>
                                            <ul class="limiter">
                                                <?php foreach ($this->getAvailableLimit() as $_key => $_limit): ?>
                                                    <li>
                                                        <a href="<?php echo $this->getLimitUrl($_key) ?>"
                                                           class=""><?php echo $_limit ?></a>
                                                    </li>
                                                <?php endforeach; ?>
                                            </ul>
                                        </div>
                                    </div> <?php //echo $this->__('per page') ?>
                                </div>
                            </div>
                        <?php endif; ?>
                    </div>
                    <div class="col-lg-3">
                        <div class="pager">
                            <?php echo $this->getPagerHtml() ?>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <?php if ($this->isExpanded()): ?>
                    <?php if ($this->isEnabledViewSwitcher()): ?>
                        <div class="view-mode">
                            <?php $_modes = $this->getModes(); ?>
                            <?php if ($_modes && count($_modes) > 1): ?>
                                <?php foreach ($this->getModes() as $_code => $_label): ?>
                                    <?php if ($this->isModeActive($_code)): ?>
                                        <?php if ($_code == 'list'): ?>
                                            <span class="active"><div class="fs1" aria-hidden="true" data-icon="d"></div></span>
                                        <?php else: ?>
                                            <span class="active"><div class="fs1" aria-hidden="true" data-icon=""></div></span>
                                        <?php endif; ?>
                                    <?php else: ?>
                                        <span class="non-active">
                                        <a href="<?php echo $this->getModeUrl($_code) ?>" title="<?php echo $_label ?>"
                                           class="<?php echo strtolower($_code); ?>">
                                            <?php if ($_code == 'list'): ?>
                                                <div class="fs1" aria-hidden="true" data-icon="d"></div>
                                            <?php else: ?>
                                                <div class="fs1" aria-hidden="true" data-icon=""></div>
                                            <?php endif; ?>
                                        </a>
                                    </span>
                                    <?php endif; ?>
                                <?php endforeach; ?>
                            <?php endif; ?>
                        </div>
                    <?php endif; ?>
                <?php endif; ?>
            </div>
        </div>
    </div>
<?php endif ?>
